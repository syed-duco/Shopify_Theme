<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}
  </head>
  <body class="">
    {% section 'header' %}
    <main role="main" >
      {{ content_for_layout }}
    </main>
    <h1>Our Products</h1>
 
    <!-- HTML & Liquid construct the list of products -->
    {% for product in collection.products %}
        <div class="product" data-id="{{ product.id }}">
            <h2>{{ product.title }}</h2>
            <p>Price: {{ product.price | money }}</p>
            <button class="details-button">Show Details</button>
        </div>
    {% endfor %}
 
    <script>
        // JavaScript for interactivity
        document.querySelectorAll('.details-button').forEach(button => {
            button.addEventListener('click', function() {
                const productDiv = this.parentElement;
                productDiv.classList.toggle('highlight');
                alert(`Details for ${productDiv.querySelector('h2').innerText}`);
            });
        });
    </script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

  </body>
</html>